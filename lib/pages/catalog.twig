{% extends "/layout/default.twig" %}
{# Add code to the head #}
{% block header %}
{% endblock %}

{% block content %}

		<section class="jumbotron text-center">
			<div class="container">
				<h1 class="jumbotron-heading">Flutos (Noun)</h1>
				<h3 class="jumbotron-heading">Pronunciation: flu-toes</h3>
				<p class="lead text-muted">An archive of the photos taken of/by of the Fluharty family on their adventures through life.</
			</div>
		</section>
	
		<div class="album text-muted">
			<div class="container">

				<div class="row">
				{% if albums %}
				{% for album in albums %}
					<div class="col-md-4">
						<div class="card">
							<a href="/a/{{album.album_slug}}" class="text-center center-block">
								<h3>{{album.title}}</h3>
								<span class="badge badge-pill badge-dark">{{album.image_total}}</span>
								{% if album.preview %}<img src="/it/{{album.album_slug}}/{{album.preview}}">{% endif %}
							</a>
						</div>
					</div>
				{% endfor %}
				{% else %}
					<div class="col-md-12 text-center">
						<h2>No albums found</h2>
					</div>
				{% endif %}
				</div>
			</div>
		</div>
{% endblock %}

{# Add code in the footer after jQuery is loaded #}
{% block footer %}
{% endblock %}