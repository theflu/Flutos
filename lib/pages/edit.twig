{% extends "/layout/default.twig" %}
{# Add code to the head #}
{% block header %}
{% endblock %}

{% block content %}

    <section class="jumbotron text-center">
      <div class="container">
        <h1 class="jumbotron-heading">Edit Album</h1>
      </div>
    </section>
	
    <div class="album text-muted">
      <div class="container">

        <div class="row">
			<div class="col-6 mx-auto">
				<form method="POST">
					<div class="form-group">
						<label for="title">Title</label>
						<input type="text" class="form-control" id="title" name="title" placeholder="Album Title" value="{% if post %}{{post.title}}{% else %}{{album.title}}{% endif %}" required>
						<small id="help" class="form-text text-muted">Letters and numbers only</small>
					</div>
					<div class="form-group">
						<label for="description">Desscription</label>
						<textarea class="form-control" id="description" name="description" placeholder="Album Desscription" required>{% if post %}{{post.description}}{% else %}{{album.description}}{% endif %}</textarea>
					</div>
					<div class="form-group">
						<label for="tags">Tags</label>
						<input type="text" class="form-control" id="tags" name="tags" placeholder="Album Tags" value="{% if post.tags %}{{post.tags}}{% else %}{% for tag in album.tags %}{{tag}}{% if not loop.last %}, {% endif %}{% endfor %}{% endif %}">
						<small id="help" class="form-text text-muted">Each tag must be seperated by a comma</small>
					</div>
					{% if users|length > 1 %}
					<div class="form-group">
						<label for="users">Allowed Users</label>
						{% for user, details in users %}
						{% if user != _SESSION_.username %}
						<div class="form-check">
							<label class="form-check-label">
								<input name="allowedUsers[]" class="form-check-input" type="checkbox" value="{{user}}"{% if post.allowedUsers and user in post.allowedUsers or not post and user in album.users %} checked{% endif %}>
								{{user}}
							</label>
						</div>
						{% endif %}
						{% endfor %}
						<small id="help" class="form-text text-muted">Users that can make changes to the album</small>
					</div>
					{% endif %}
					<hr>
					<button type="submit" class="btn btn-success">Save</button>
					<a href="/a/{{album_slug}}" class="btn btn-warning">Cancel</a>
					<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
				</form>
				{% if msg %}<br><div class="alert alert-{{msg.type}} text-center" role="alert">{{msg.msg}}</div>{% endif %}
			</div>
        </div>
      </div>
    </div>

	<!-- Delete Modal -->
	<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">

				<div class="modal-body text-center">
					<h2>Delete this album?</h2>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
					<a href="/d/{{album_slug}}" class="btn btn-danger">Delete</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{# Add code in the footer after jQuery is loaded #}
{% block footer %}
{% endblock %}