{% extends "/layout/default.twig" %}

{% set page_title = 'Search Results' %}

{# Add code to the head #}
{% block header %}
{% endblock %}

{% block content %}

		<section class="jumbotron text-center">
			<div class="container">
				<h1 class="jumbotron-heading">Tag</h1>
				<h3 class="jumbotron-heading">{{ tag }}</h3>
			</div>
		</section>
	
		<div class="album text-muted">
			<div class="container">

				<div class="row">
				{% if albums %}
					<div class="row">
				{% for album in albums %}
					<div class="col-md-4">
						<div class="card">
							<a href="/album/{{ album.album_slug }}" class="text-center center-block">
								<h3>{{album.title}}</h3>
								<span class="badge badge-pill badge-dark">{{album.image_total}}</span>
								{% if album.default %}<img src="/album/{{album.album_slug}}/th_{{album.default}}">{% endif %}
							</a>
						</div>
					</div>
				{% endfor %}
					</div>
				{% else %}
					<div class="row">
					<div class="col-md-12 text-center">
						<h2>No albums found</h2>
					</div>
					</div>
				{% endif %}
					<div class="row">
						<div class="col-md-12">
                            {% if page > 1 %}<a href="/tag/{{ tag }}/page/{{ page - 1 }}" class="btn btn-md btn-info">Previous</a>{% endif %}
                            {% if albums|length >= 9 %}<a href="/tag/{{ tag }}/page/{{ page + 1 }}" class="btn btn-md btn-info float-right">Next</a>{% endif %}
						</div>
					</div>
			</div>
		</div>
{% endblock %}

{# Add code in the footer after jQuery is loaded #}
{% block footer %}
{% endblock %}