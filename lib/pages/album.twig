{% extends "/layout/default.twig" %}

{% set page_title = config.title %}
{% set page_description = config.description %}
{% set page_image = '/album/'~config.album_slug~'/'~config.default %}

{# Add code to the head #}
{% block header %}
    <link href="/css/lightbox.css" rel="stylesheet">
    <link href="/css/rrssb.css" rel="stylesheet">
{% endblock %}

{% block content %}

    <section class="jumbotron text-center">
      <div class="container">
        <h1 class="jumbotron-heading">{{ config.title }}</h1>
        <p class="lead text-muted">{{ config.description }}</p>
		{% if tags %}
		<p>
			{% for tag in tags %}
			<a href="/tag/{{ tag }}" class="badge badge-info">{{ tag }}</a>
			{% endfor %}
		</p>
		{% endif %}
		{% if _SESSION_.username %}
		{% if _SESSION_.user_type == 'admin' or _SESSION_.username == config.owner or _SESSION_.username in config.users %}
		<hr>
		<p>
            {% if _SESSION_.user_type == 'admin' or _SESSION_.username == config.owner %}<a href="/album/{{ config.album_slug }}/edit" class="btn btn-info">Edit</a>{%  endif %}
            {% if _SESSION_.user_type == 'admin' or _SESSION_.username in config.users or _SESSION_.username == config.owner %}<a href="/album/{{ config.album_slug }}/upload" class="btn btn-success">Upload</a>{%  endif %}
            {% if _SESSION_.user_type == 'admin' or _SESSION_.username == config.owner %}<button type="button" id="edit-photos" class="btn btn-primary">Edit Photos</button>{%  endif %}
		</p>
		{% endif %}
		{% endif %}
          <!-- Buttons start here. Copy this ul to your document. -->
          <ul class="rrssb-buttons clearfix">
              <li class="rrssb-email">
                  <!-- Replace subject with your message using URL Encoding: http://meyerweb.com/eric/tools/dencoder/ -->
                  <a href="mailto:?Subject=Photo%20Alum%20{{ config.title|url_encode }}">
                      <span class="rrssb-icon"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 28 28"><path d="M20.11 26.147c-2.335 1.05-4.36 1.4-7.124 1.4C6.524 27.548.84 22.916.84 15.284.84 7.343 6.602.45 15.4.45c6.854 0 11.8 4.7 11.8 11.252 0 5.684-3.193 9.265-7.398 9.3-1.83 0-3.153-.934-3.347-2.997h-.077c-1.208 1.986-2.96 2.997-5.023 2.997-2.532 0-4.36-1.868-4.36-5.062 0-4.75 3.503-9.07 9.11-9.07 1.713 0 3.7.4 4.6.972l-1.17 7.203c-.387 2.298-.115 3.3 1 3.4 1.674 0 3.774-2.102 3.774-6.58 0-5.06-3.27-8.994-9.304-8.994C9.05 2.87 3.83 7.545 3.83 14.97c0 6.5 4.2 10.2 10 10.202 1.987 0 4.09-.43 5.647-1.245l.634 2.22zM16.647 10.1c-.31-.078-.7-.155-1.207-.155-2.572 0-4.596 2.53-4.596 5.53 0 1.5.7 2.4 1.9 2.4 1.44 0 2.96-1.83 3.31-4.088l.592-3.72z"/></svg></span>
                      <span class="rrssb-text">email</span>
                  </a>
              </li>
              <li class="rrssb-facebook">
                  <!--  Replace with your URL. For best results, make sure you page has the proper FB Open Graph tags in header: https://developers.facebook.com/docs/opengraph/howtos/maximizing-distribution-media-content/ -->
                  <a href="https://www.facebook.com/sharer/sharer.php?u={{ _URL_ }}" class="popup">
                      <span class="rrssb-icon"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 29 29"><path d="M26.4 0H2.6C1.714 0 0 1.715 0 2.6v23.8c0 .884 1.715 2.6 2.6 2.6h12.393V17.988h-3.996v-3.98h3.997v-3.062c0-3.746 2.835-5.97 6.177-5.97 1.6 0 2.444.173 2.845.226v3.792H21.18c-1.817 0-2.156.9-2.156 2.168v2.847h5.045l-.66 3.978h-4.386V29H26.4c.884 0 2.6-1.716 2.6-2.6V2.6c0-.885-1.716-2.6-2.6-2.6z"/></svg></span>
                      <span class="rrssb-text">facebook</span>
                  </a>
              </li>
              <li class="rrssb-twitter">
                  <!-- Replace href with your Meta and URL information  -->
                  <a href="https://twitter.com/intent/tweet?text={{ _URL_ }}"
                     class="popup">
                      <span class="rrssb-icon"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 28 28"><path d="M24.253 8.756C24.69 17.08 18.297 24.182 9.97 24.62a15.093 15.093 0 0 1-8.86-2.32c2.702.18 5.375-.648 7.507-2.32a5.417 5.417 0 0 1-4.49-3.64c.802.13 1.62.077 2.4-.154a5.416 5.416 0 0 1-4.412-5.11 5.43 5.43 0 0 0 2.168.387A5.416 5.416 0 0 1 2.89 4.498a15.09 15.09 0 0 0 10.913 5.573 5.185 5.185 0 0 1 3.434-6.48 5.18 5.18 0 0 1 5.546 1.682 9.076 9.076 0 0 0 3.33-1.317 5.038 5.038 0 0 1-2.4 2.942 9.068 9.068 0 0 0 3.02-.85 5.05 5.05 0 0 1-2.48 2.71z"/></svg></span>
                      <span class="rrssb-text">twitter</span>
                  </a>
              </li>
          </ul>
          <!-- Buttons end here -->
      </div>
    </section>
	
    <div class="album text-muted">
      <div class="container">

        <div class="row">
          {% set i = 0 %}
            {% set max = (config.image_total/3)|round(0, 'ceil') %}
		  {% for image in images %}
    {% if i == 0 %}<div class="col-lg-4">{% endif %}
			  <div class="card" id="{{ image }}">
				  <a href="/album/{{ config.album_slug }}/{{ image }}" data-lightbox="{{ config.album_slug }}" class="gallery"><img src="/album/{{ config.album_slug }}/th_{{ image }}"></a>
                  {% if _SESSION_.user_type == 'admin' or _SESSION_.username == config.owner %}
                  <div class="row edit-buttons" style="display: none;">
                      <div class="col-sm-12 text-left">
                          <button type="button" class="mt-2 btn btn-danger delete-button" value="{{image}}">Delete</button>
                          <button class="float-right mt-2 btn default-button {% if image != config.default %}btn-outline-success{% else %}btn-success{% endif %}" {% if image == config.default %}id="default-image"{% endif %} value="{{image}}">Default</button>
                      </div>
                  </div>
                  {%  endif %}
			  </div>
			  {% set i = i+1 %}
              {% if i == max %}</div>{% set i = 0 %}{% endif %}
		  {% endfor %}
		  {% if i != 0 %}</div>{% endif %}
        </div>

      </div>
    </div>

    {% if _SESSION_.user_type == 'admin' or _SESSION_.username == config.owner %}
    <!-- Delete Modal -->
    <div class="modal fade" id="delete-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Photo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <h5>Are you sure you want to delete this photo?</h5>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="delete-confirm" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

{% endblock %}

{# Add code in the footer after jQuery is loaded #}
{% block footer %}
    <script src="/js/lightbox.js"></script>
    <script src="/js/rrssb.js"></script>

    {% if _SESSION_.user_type == 'admin' or _SESSION_.username == config.owner %}
    <script>
        $('#edit-photos').click(function () {
            if ($('.edit-buttons').is(':visible')) {
                $('.edit-buttons').each(function () {
                    $(this).hide();
                });
            } else {
                $('.edit-buttons').each(function () {
                    $(this).show();
                });
            }
        });

        $('.delete-button').click(function () {
            $('#delete-confirm').val($(this).val());
            $('#delete-modal').modal('show');
        });

        $('#delete-confirm').click(function () {
            var imageId = $(this).val()
            $.get('/album/{{ config.album_slug }}/'+imageId+'/delete');
            $('#'+imageId).hide();
            $('#delete-modal').modal('hide');
        });

        $('.default-button').click(function () {
            $.get('/album/{{ config.album_slug }}/'+$(this).val()+'/default');
            $('#default-image').removeClass('btn-success');
            $('#default-image').addClass('btn-outline-success');
            $('#default-image').removeAttr('id');
            $(this).removeClass('btn-outline-success');
            $(this).addClass('btn-success');
            $(this).attr('id', 'default-image');
        });
    </script>
    {% endif %}
{% endblock %}